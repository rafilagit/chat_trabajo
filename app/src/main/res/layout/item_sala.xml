<!-- item_sala.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/btnSala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre de la Sala"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvParticipantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Participantes: Usuario1, Usuario2, Usuario3"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tvIdSala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID de la Sala: 123456"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/btnEliminarSala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:visibility="visible"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF0000" />
</LinearLayout>
