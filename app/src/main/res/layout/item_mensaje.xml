<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner"
    android:padding="8dp">

    <TextView
        android:id="@+id/textViewNombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:text="Nombre Usuario" />

    <ImageView
        android:id="@+id/imageViewImagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewNombreUsuario"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/barra"
        android:layout_width="143dp"
        android:layout_height="57dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="-4dp"
        android:background="@null"
        android:contentDescription="Boton pausa"
        android:scaleType="centerInside"
        android:src="@drawable/barra"
/>
    <ImageView
        android:id="@+id/onda"
        android:layout_width="110dp"
        android:layout_height="51dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="-1dp"
        android:background="@null"
        android:contentDescription=" onda"
        android:scaleType="centerInside"
        android:src="@drawable/ondas"
        />

    <ImageButton
        android:id="@+id/buttonReproducir"
        android:layout_width="40dp"
        android:layout_height="37dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="86dp"
        android:background="@null"
        android:contentDescription="Boton reproducir"
        android:scaleType="centerInside"
        android:src="@drawable/reproducir"
        />


    <TextView
        android:id="@+id/textViewMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@id/imageViewImagen"
        android:text="Mensaje de ejemplo"
        android:maxWidth="240dp"/>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/textViewMensaje"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />


    <TextView
        android:id="@+id/textViewFechaHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textViewMensaje"
        android:text="Fecha y Hora"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
